{
  "name": "ensemble-me",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/JonHake18/ensemble-me.git",
  "author": "Matthew Kelly",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "mongoose": "^5.3.0",
    "path": "^0.12.7"
  },
  
  "devDependencies": {
    "concurrently": "^3.5.0",
    "nodemon": "^1.11.0",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "mocha": "^5.2.0"
  },
  "scripts": {
    "start-react": "cd client && yarn start",
    "start": "concurrently \"nodemon server.js --ignore 'client/*'\" \"yarn start-react\"",
    "build": "cd client && yarn build",
    "mocha-test": "yarn mocha -u tdd --reporter spec --exit",
    "reacttest": "cd client && yarn test",
    "test": "yarn mocha-test && yarn reacttest",
    "seed": "node scripts/seedDB.js",
    "eject": "cd client && yarn eject",
    "client-install": "cd client && yarn install",
    "install": "npm install && npm run client-install",
    "heroku-postbuild": "yarn build"
  }
}