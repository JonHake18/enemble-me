{
  "name": "ensemble-me",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/JonHake18/ensemble-me.git",
  "author": "Matthew Kelly",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "mongoose": "^5.3.0",
    "path": "^0.12.7",
    "react-scripts": "^2.0.4",
    "youtube-player": "^5.5.1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "concurrently": "^3.5.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.11.0"
  },
  "scripts": {
    "start-react": "cd client && yarn start",
    "start": "concurrently \"nodemon server.js --ignore 'client/*'\" \"npm run start-react\"",
    "build": "cd client && npm run build",
    "mocha-test": "npm run mocha -u tdd --reporter spec --exit",
    "reacttest": "cd client && npm run test",
    "test": "npm run mocha-test && npm run reacttest",
    "seed": "node scripts/seedDB.js",
    "eject": "cd client && npm run eject",
    "postinstall": "cd client && npm install",
    "heroku-postbuild": "npm run build"
  }
}
